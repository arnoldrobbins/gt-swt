vert_pos          ESC X      # absolute vertical positioning
hor_pos           ESC Y      # absolute horizontal positioning
coord_type        3 1 US     # 'coordinate character' for coordinate computation
wrap_around       NO         # terminal has line wrap_around
clear_delay       20         # msec delay after clear screen
pos_delay         10         # msec delay after cursor pos

